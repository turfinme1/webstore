{
  "type": "object",
  "name": "appSettingsSchema",
  "properties": {
    "request_limit": {
      "type": "integer",
      "minimum": 1,
      "default": 10,
      "label": "Request Limit",
      "placeholder": "Enter the request limit",
      "pattern": "^\\d+$",
      "errorMessage": {
        "minimum": "Request limit must be greater than or equal to 1.",
        "type": "Request limit must be a number."
      }
    },
    "request_window": {
      "type": "string",
      "default": "10 minutes",
      "label": "Request Window",
      "placeholder": "Enter request window (e.g., 10 minutes)",
      "pattern": "^([0-9]+\\s+(minute|hour|day|week)s?)$",
      "errorMessage": {
        "pattern": "Request window should be a valid interval (e.g., '10 minutes')."
      }
    },
    "request_block_duration": {
      "type": "string",
      "default": "1 hour",
      "label": "Block Duration",
      "placeholder": "Enter block duration (e.g., 1 hour)",
      "pattern": "^([0-9]+\\s+(minute|hour|day|week)s?)$",
      "errorMessage": {
        "pattern": "Block duration should be a valid interval (e.g., '1 hour')."
      }
    }
  },
  "required": [],
  "additionalProperties": false,
  "errorMessage": {
    "required": {
      "request_limit": "Request limit is required.",
      "request_window": "Request window is required.",
      "request_block_duration": "Block duration is required."
    },
    "additionalProperties": "No additional properties are allowed."
  }
}
