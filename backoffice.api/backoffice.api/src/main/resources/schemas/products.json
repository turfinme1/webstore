{
  "type": "object",
  "name": "products",
  "routeName": "products",
  "views": "products_view",
  "queryValidationSchema": "productQueryParamsSchema",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-zA-Z ]+$",
      "label": "Name",
      "placeholder": "Enter Name",
      "errorMessage": {
        "minLength": "Name must be at least 3 characters long."
      }
    },
    "price": {
      "type": "number",
      "minimum": 1,
      "label": "Price",
      "placeholder": "Enter Price",
      "errorMessage": {
        "minimum": "Price must be a positive number.",
        "type": "Price must be a number."
      }
    },
    "short_description": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-zA-Z ]+$",
      "label": "Short Description",
      "placeholder": "Enter Short Description",
      "errorMessage": {
        "minLength": "Short Description must be at least 3 characters long."
      }
    },
    "long_description": {
      "type": "string",
      "minLength": 3,
      "label": "Long Description",
      "pattern": "^[a-zA-Z ]+$",
      "placeholder": "Enter Long Description",
      "errorMessage": {
        "minLength": "Long Description must be at least 3 characters long."
      }
    },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3,
        "pattern": "^[a-zA-Z ]+$"
      },
      "label": "Categories",
      "placeholder": "Enter Categories",
      "errorMessage": {
        "minItems": "At least one category is required.",
        "minLength": "Category must be at least 3 characters long."
      }
    }
  },
  "displayProperties": {
    "name": {
      "label": "Name",
      "placeholder": "Enter Name",
      "searchable": true
    },
    "price": {
      "label": "Price",
      "placeholder": "Enter Price"
    },
    "short_description": {
      "label": "Short Description",
      "placeholder": "Enter Short Description",
      "searchable": true
    },
    "long_description": {
      "label": "Long Description",
      "placeholder": "Enter Long Description",
      "searchable": true
    }
  },
  "relationships": {
    "categories": {
      "table" : "products_categories",
      "foreign_key": "product_id",
      "related_key": "category_id"
    },
    "images": {
      "table" : "images",
      "foreign_key": "product_id",
      "related_key": "url"
    },
    "comments": {
      "table" : "comments",
      "foreign_key": "product_id"
    },
    "ratings": {
      "table" : "ratings",
      "foreign_key": "product_id"
    }
  },
  "required": [
    "name",
    "price",
    "short_description",
    "long_description",
    "categories",
    "images"
  ],
  "additionalProperties": false,
  "errorMessage": {
    "required": {
      "name": "Name is required.",
      "price": "Price is required.",
      "short_description": "Short Description is required.",
      "long_description": "Long Description is required."
    },
    "additionalProperties": "No additional properties are allowed."
  }
}